<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/show_dialog_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dialog 1"
        app:layout_constraintBottom_toTopOf="@+id/show_dialog_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_dialog_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dialog 2"
        app:layout_constraintBottom_toTopOf="@+id/show_dialog_3"
        app:layout_constraintEnd_toEndOf="@id/show_dialog_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/show_dialog_1"
        app:layout_constraintTop_toBottomOf="@+id/show_dialog_1" />

    <Button
        android:id="@+id/show_dialog_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dialog 3"
        app:layout_constraintBottom_toTopOf="@+id/show_dialog_4"
        app:layout_constraintEnd_toEndOf="@id/show_dialog_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/show_dialog_1"
        app:layout_constraintTop_toBottomOf="@+id/show_dialog_2" />

    <Button
        android:id="@+id/show_dialog_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dialog 4"
        app:layout_constraintBottom_toTopOf="@+id/show_dialog_5"
        app:layout_constraintEnd_toEndOf="@id/show_dialog_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/show_dialog_1"
        app:layout_constraintTop_toBottomOf="@+id/show_dialog_3" />

    <Button
        android:id="@+id/show_dialog_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dialog 5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/show_dialog_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/show_dialog_1"
        app:layout_constraintTop_toBottomOf="@+id/show_dialog_4" />


</androidx.constraintlayout.widget.ConstraintLayout>